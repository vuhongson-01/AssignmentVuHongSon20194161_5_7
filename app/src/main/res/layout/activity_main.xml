<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvPath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/system/path"
                    android:textSize="15sp" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:spinnerMode="dialog"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnParentDir"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/btn_bg"
                    android:onClick="onParentDir_Click"
                    android:text=".." />


            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMainStorage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/hdd"
                    android:onClick="onMainStorage_Click"
                    android:text="Main Storage"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="70dp" />

                <Button
                    android:id="@+id/btnSDCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/sdcard"
                    android:onClick="onSDCARD_Click"
                    android:text="SD Card"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="70dp" />

                <Button
                    android:id="@+id/btnDownloads"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/downloads"
                    android:onClick="onDownloads_Click"
                    android:text="Downloads"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="216dp"
                    tools:layout_editor_absoluteY="70dp" />

            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDocuments"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/documents36x36"
                    android:onClick="onDocuments_Click"
                    android:text="Documents"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="118dp" />

                <Button
                    android:id="@+id/btnImages"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/images36x36"
                    android:onClick="onImages_Click"
                    android:text="Images"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="118dp" />

                <Button
                    android:id="@+id/btnAudio"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/audio"
                    android:onClick="onAudio_Click"
                    android:text="Audio"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="216dp"
                    tools:layout_editor_absoluteY="118dp" />


            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnVideo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/video"
                    android:onClick="onVideo_Click"
                    android:text="Videos"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="166dp" />

                <Button
                    android:id="@+id/btnDCIM"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_bg"
                    android:drawableStart="@drawable/camera36x36"
                    android:onClick="onDCIM_Click"
                    android:text="DCIM"
                    android:textSize="10sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="166dp" />


            </LinearLayout>

        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lstFolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

            </LinearLayout>

        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>